vars
  b[7];
  r[7];

rules
  b(n),!b(n-1),!r(n-1) -> !b(n),b(n-1)
  b(n),!b(n+1),!r(n+1) -> !b(n),b(n+1)
  r(n),!b(n-1),!r(n-1) -> !r(n),r(n-1)
  r(n),!b(n+1),!r(n+1) -> !r(n),r(n+1)

  b(n),r(n-1),!b(n-2),!r(n-2) -> !b(n),b(n-2)
  b(n),r(n+1),!b(n+2),!r(n+2) -> !b(n),b(n+2)
  r(n),b(n-1),!r(n-2),!b(n-2) -> !r(n),r(n-2)
  r(n),b(n+1),!r(n+2),!b(n+2) -> !r(n),r(n+2)



init
  b(1),b(2),b(3),r(5),r(6),r(7)
  
check
  Uz.((r(1) & (r(2) & (r(3) & (b(5) & (b(6) & b(7)))))) | <>:z)



