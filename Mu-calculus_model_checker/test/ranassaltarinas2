vars
  b1;b2;b3;b4;b5;b6;b7;
  r1;r2;r3;r4;r5;r6;r7

rules
  b2,!b1,!r1 -> !b2,b1;
  b3,!b2,!r2 -> !b3,b2;
  b4,!b3,!r3 -> !b4,b3;
  b5,!b4,!r4 -> !b5,b4;
  b6,!b5,!r5 -> !b6,b5;
  b7,!b6,!r6 -> !b7,b6;

  r2,!b1,!r1 -> !r2,r1;
  r3,!b2,!r2 -> !r3,r2;
  r4,!b3,!r3 -> !r4,r3;
  r5,!b4,!r4 -> !r5,r4;
  r6,!b5,!r5 -> !r6,r5;
  r7,!b6,!r6 -> !r7,r6;

  b1,!b2,!r2 -> !b1,b2;
  b2,!b3,!r3 -> !b2,b3;
  b3,!b4,!r4 -> !b3,b4;
  b4,!b5,!r5 -> !b4,b5;
  b5,!b6,!r6 -> !b5,b6;
  b6,!b7,!r7 -> !b6,b7;

  r1,!b2,!r2 -> !r1,r2;
  r2,!b3,!r3 -> !r2,r3;
  r3,!b4,!r4 -> !r3,r4;
  r4,!b5,!r5 -> !r4,r5;
  r5,!b6,!r6 -> !r5,r6;
  r6,!b7,!r7 -> !r6,r7;

  b3,r2,!b1,!r1 -> !b3,b1;
  b4,r3,!b2,!r2 -> !b4,b2;
  b5,r4,!b3,!r3 -> !b5,b3;
  b6,r5,!b4,!r4 -> !b6,b4;
  b7,r6,!b5,!r5 -> !b7,b5;

  r3,b2,!b1,!r1 -> !r3,r1;
  r4,b3,!b2,!r2 -> !r4,r2;
  r5,b4,!b3,!r3 -> !r5,r3;
  r6,b5,!b4,!r4 -> !r6,r4;
  r7,b6,!b5,!r5 -> !r7,r5;

  b1,r2,!b3,!r3 -> !b1,b3;
  b2,r3,!b4,!r4 -> !b2,b4;
  b3,r4,!b5,!r5 -> !b3,b5;
  b4,r5,!b6,!r6 -> !b4,b6;
  b5,r6,!b7,!r7 -> !b5,b7;

  r1,b2,!b3,!r3 -> !r1,r3;
  r2,b3,!b4,!r4 -> !r2,r4;
  r3,b4,!b5,!r5 -> !r3,r5;
  r4,b5,!b6,!r6 -> !r4,r6;
  r5,b6,!b7,!r7 -> !r5,r7


init
  b1,b2,b3,r5,r6,r7
  
check
  $x.%y.(((r1 & (r2 & (r3 & (b5 & (b6 & b7))))) & []:x) | <>:y)



